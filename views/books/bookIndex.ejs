<h2>Search Books</h2>
<form action="/books" method="get">
  <div>
    <label for="">Title:</label>
    <input
      type="search"
      name="bookTitle"
      id="bookTitle"
      value="<%=searchOptions.bookTitle%>"
    />
  </div>
  <div>
    <label for="">Published Before:</label>
    <input
      type="date"
      name="publishedBefore"
      id="publishedBefore"
      value="<%=searchOptions.publishedBefore%>"
    />
  </div>
  <div>
    <label for="">Published After:</label>
    <input
      type="date"
      name="publishedAfter"
      id="publishedAfter"
      value="<%=searchOptions.publishedAfter%>"
    />
  </div>
  <div>
    <input type="submit" value="Search" />
  </div>
</form>
<br />
<%- include('../partials/bookListShow.ejs') %>
