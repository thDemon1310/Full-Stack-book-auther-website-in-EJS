<h2><%= bookData.title %></h2>
<div>
  <div class="image">
    <img
      src="<%= bookData.coverImagePath %>"
      height="200"
      width="120"
      alt="Book Cover"
    />
  </div>
  <div>
    <table>
      <tr>
        <td><h3>Auther:</h3></td>
        <td><%= bookData.auther.name %></td>
      </tr>
      <tr>
        <td><h3>Publish Date:</h3></td>
        <td><%= bookData.publishDate.toDateString() %></td>
      </tr>
      <tr>
        <td><h3>Page Count:</h3></td>
        <td><%= bookData.pageCount %></td>
      </tr>
      <tr>
        <td><h3>Description:</h3></td>
        <td><%= bookData.description %></td>
      </tr>
    </table>
  </div>
</div>
<div class="btn-row">
  <a href="/books/<%= bookData.id %>/edit" class="btn btn-primary">Edit</a>
  <%- include('../partials/deleteForm.ejs',{url:`/books/${bookData.id}`}) %>
  <a href="/authers/<%= bookData.auther.id %>/" class="btn btn-primary"
    >View Author</a
  >
</div>
